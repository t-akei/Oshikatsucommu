<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get do |f| %>
    <%= f.text_field :word, value:word %>
    <%= f.select :method, options_for_select({
                                              "完全一致" => "perfect",
                                              "前方一致" => "forward",
                                              "後方一致" => "backward",
                                              "部分一致" => "partial"
                                              }, selected: method) %>
    <%= f.submit "キーワード検索" %>
  <% end %>
<% end %>