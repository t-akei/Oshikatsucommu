<!--User infoの部分テンプレートファイル-->
<h3 class="text-center">User info</h3>
<div class="col-md-6 mx-auto">
  <%= image_tag user.get_profile_image(100, 100) %>
</div>

<table class="table text-center">
  <thead>
    <tr>
      <th>User name</th>
    </tr>
    <tr>
      <td class="info"><%= user.name %></td>
    </tr>
    <tr>
      <th>Introduction</th>
    </tr>
    <tr>
      <td class="info"><%= simple_format(user.introduction) %></td>
    </tr>
  </thead>
</table>

<div class="row" id="test">
  <table class="table">
    <% if user == current_user && user.email != "guest@example.com" %>
    <tr>
      <td>
        <%= link_to edit_user_path(user), class:"btn btn-outline-dark btn-sm btn-block" do  %>
          <i class="fa-solid fa-user-pen"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
    <tr>
      <td class="text-center"><%= link_to "My Bookmark", user_bookmarks_path(user), style:"color:black;" %></td>
    </tr>
    <tr>
      <td><%= link_to "投稿する", new_post_path, class:"btn btn-success btn-sm btn-block" %></td>
    </tr>
  </table>
</div>

<div class="text-center">
  ジャンル検索
</div>
<nav class="navbar navbar-light d-flex justify-content-center">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarGenreDropdown" aria-controls="navbarGenreDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarGenreDropdown">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item mt-2">
          <% genres.each do |genre| %>
          <table class="table text-center">
            <tbody>
              <tr>
                <td class="info">
                  <%= link_to genre_search_path(genre_id: genre.id), style:"color: black;" do %>
                    <%= genre.name %>
                  <% end %>
                </td>
              </tr>
          <% end %>
              <tr>
                <td class="info">
                  <%= link_to genre_search_path(genre_id: other_genre.id), style:"color: black;" do %>
                    その他
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
      </li>
    </ul>
  </div>
</nav>



