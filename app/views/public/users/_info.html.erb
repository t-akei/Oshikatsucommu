<!--部分テンプレートファイル-->
<div class="col-md-3">
  <h3>User info</h3>
  <%= image_tag user.get_profile_image(100, 100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>User name</th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>Introduction</th>
        <td><%= user.introduction %></td>
      </tr>


      <!--他のユーザーやゲストユーザーには-->
      <% if user == current_user && user.email != "guest@example.com" %>
        <tr>
          <td><%= link_to "編集", edit_user_path(user) %></td>
        </tr>
        <tr>
          <td><%= link_to "Bookmark", user_bookmarks_path(user) %></td>
        </tr>
      <% end %>
        <tr>
          <td><%= link_to "投稿する", new_post_path %></td>
        </tr>
      <%# end %>
      <tr>
        <th>ジャンル検索</th>
      </tr>
      <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre_search_path(genre_id: genre.id) do %>
            <%= genre.name %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>
</div>