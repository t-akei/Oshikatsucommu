<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'info', user: @user, genres: @genres %>
    </div>

    <div class="col-md-8 offset-md-1">
      <div class="row">
        <div class="col-md-6">
          <%= render 'public/searches/form', method: @method, word: @word %>
        </div>
        <div class="col-md-5 offset-md-1">
          <%= render 'public/tagsearches/tagform', content: @content %>
        </div>
      </div>

      <h3 class="mt-4"><%= @user.name %>'s Posts</h3>
      <% if @posts.exists? %>
      <table class="table">
        <thead>
          <tr>
            <th class="col-md-2">Title</th>
            <th class="col-md-2">Tag</th>
            <th class="col-md-2">Genre</th>
            <th class="col-md-4">Text</th>
            <th class="col-md-2">Comment<br>count</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td>
              <%= link_to post_path(post) do %>
                <%= truncate(post.title, length: 10, omision: "...") %>
              <% end %>
            </td>
            <td>
              <%= link_to tagsearch_search_path(content: post.category) do %>
                <%= post.category %>
              <% end %>
            </td>
            <td><%= post.genre.name %></td>
            <td><%= truncate(post.body, length: 15, omision: "...") %></td>
            <td><%= post.post_comments.count %></td>
            <td><%= post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
        <p>投稿はまだありません</p>
      <% end %>
      <div class="paginate">
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>