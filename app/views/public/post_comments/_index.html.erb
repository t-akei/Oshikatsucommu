<!--コメント一覧の部分テンプレート-->

<table>
  <thead>
    <tr>
      <th class="co-md-1"></th>
      <th class="co-md-3"></th>
      <th class="co-md-3"></th>
      <th class="co-md-1"></th>
    </tr>
  </thead>
  <tbody>
    <% post_comments.each do |post_comment| %>
    <tr>
      <td>
        <%= link_to user_path(post_comment.user) do %>
          <%= image_tag post_comment.user.get_profile_image(50, 40) %><br>
          <%= post_comment.user.name %>
        <% end %>
      </td>
      <td class="comment"><%= simple_format(post_comment.comment) %></td>
      <td><%= post_comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
      <td>
        <% if post_comment.user == current_user %>
          <%= link_to "Destroy", post_post_comment_path(post_comment.post, post_comment), method: :delete, class:"btn btn-danger btn-sm float-end", remote: true %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>