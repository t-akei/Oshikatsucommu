<h3>Post search for "<%= @content %>"</h3>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>User name</th>
      <th>Tag</th>
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= image_tag post.user.get_profile_image(80, 80) %></td>
      <td><%= post.user.name %></td>
      <td>
        <%= link_to tagsearch_search_path(content: post.category) do %>
          <%= post.category %>
        <% end %>
      </td>
      <!--<td><%#= link_to post.category, tagsearch_search_path(content: post.category) %></td>-->
      <td><%= post.title %></td>
      <td><%= link_to "Show", post_path(post.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>