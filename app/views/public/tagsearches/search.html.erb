<!--タグ(カテゴリー)検索結果を表示-->
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/users/info', user: @user, genres: @genres %>
    </div>

    <div class="col-md-8 offset-md-1">
      
      <div class="form-group">
        <%= render 'public/searches/form', method: @method, word: @word %>
      </div>
      <div class="form-group">
        <%= render 'public/tagsearches/tagform', content: @content %>
      </div>

      <h3 class="mt-4">Post search for Tag "<%= @content %>"</h3>
      <table class="table">
        <thead>
          <tr>
            <th class="col-md-2">User name</th>
            <th class="col-md-2">Title</th>
            <th class="col-md-2">Tag</th>
            <th class="col-md-2">Genre</th>
            <th class="col-md-4">Text</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td>
              <%= image_tag post.user.get_profile_image(80, 80) %><br>
              <%= post.user.name %>
            </td>
            <td>
              <%= link_to post_path(post) do %>
                <%= post.title %>
              <% end %>
            </td>
            <td>
              <%= link_to tagsearch_search_path(content: post.category) do %>
                <%= post.category %>
              <% end %>
            </td>
            <td><%= post.genre.name %></td>
            <td><%= post.body[0..10]... %></td>
            <td><%= post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

