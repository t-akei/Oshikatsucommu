<h1>Post Detail</h1>
<table>
  <tbody>
    <tr>
      <th>User</th>
      <td><%= image_tag @post.user.get_profile_image(80, 80), accept: "image/*" %></td>
      <td>
        <%= link_to user_path(@post.user) do %>
          <%= @post.user.name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>Title</th>
      <td><%= @post.title %></td>
    </tr>
    <tr>
      <th>Genre</th>
      <!--<td>Genre参照</td>-->
    </tr>
    <tr>
      <th>Text</th>
      <td><%= @post.body %></td>
      <td><%= link_to "Edit", edit_post_oath(@post) %></td>
      <td><%= link_to "Destroy", post_path(@post), method: :delete %></td>
    </tr>
  </tbody>
</table>