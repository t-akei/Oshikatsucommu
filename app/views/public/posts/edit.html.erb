<% @post.errors.any? %>
  <%= @post.errors.count %> 件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h4>Post edit</h4>
<%= form_with model: @post do |f| %>

  <%= f.file_field :post_image, accept: "image/*" %>
  
  <%#= f.label :genre %>
  <%#= ジャンルをセレクトボックスで選択できるように %>
  
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :text %>
  <%= f.text_area :body %>
  
  <%= f.submit "Update Post" %>
  
<% end %>

<%= link_to "Back", post_path(@post) %>
