<% if @post.errors.any? %>
  <%= @post.errors.count %> 件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'public/users/info', user: @user %>

<h4>Post edit</h4>
<%= form_with model: @post do |f| %>

  <%= f.file_field :post_image, accept: "image/*" %><br>

  <%= f.label :theme %>
  <%= f.text_field :category %><br>

  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :text %>
  <%= f.text_area :body %><br>

  <%= f.submit "Update Post" %>

<% end %>

<%= link_to "Back", post_path(@post) %>
