<% if @post.errors.any? %>
  <%=  @post.errors.count %> 件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'public/users/info', user: @user, genres: @genres %>

<h4>新規投稿</h4>

<%= form_with model: @post do |f| %>
  <%= f.label :image %>
  <%= f.file_field :post_image, accept: "image/*" %><br>

  <%= f.label :tag %>
  <%= f.text_field :category, placeholder: "(例)ステーバックス" %><br>

  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "選択して下さい"}, {class: 'form-control'}  %><br>

  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :text %><br>
  <%= f.text_area :body, row:'5', placeholder: "本文はここに書いて下さい", class:"w-100" %><br>

  <%= f.submit "投稿" %>

<% end %>