<h4>新規投稿</h4>

<%= form_with model: @post do |f| %>
  <%= f.label :画像 %>
  <%= f.file_field :post_image, accept: "image/*" %><br>

  <%#= f.label :genre %>
  <%#= Genreをセレクトボックスで選べるようにする %>

  <%= f.label :タイトル %>
  <%= f.text_field :title %><br>

  <%= f.label :本文 %><br>
  <%= f.text_area :body %><br>

  <%= f.submit "投稿" %>

<% end %>