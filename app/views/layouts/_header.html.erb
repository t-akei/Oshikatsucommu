<header>
  <nav class="navbar navbar-expand-lg navbar-dark mb-3 py-3" style="background-color: #0e357f;">
    <div class="container">
      <a class="navbar-brand" href="/">
        <span><h2>推し活コミュ!!</h2></span>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if admin_signed_in? %>
          <li>
            <%= link_to admin_root_path, class:"nav-link text-light" do %>
              <i class="fa-solid fa-users"></i> ユーザー一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_posts_path, class:"nav-link text-light" do %>
              <i class="fa-solid fa-paste"></i> 投稿一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_post_comments_path, class:"nav-link text-light" do %>
              <i class="fa-solid fa-comments"></i> 投稿コメント一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_genres_path, class:"nav-link text-light" do %>
              <i class="fa-solid fa-face-smile"></i> ジャンル一覧
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, method: :delete, class:"nav-link text-light" do %>
              <i class="fa-solid fa-right-from-bracket"></i> ログアウト
            <% end %>
          </li>

        <% elsif user_signed_in? %>
          <li>
            <%= link_to user_path(current_user), class:"nav-link text-light" do %>
              <i class="fa-solid fa-user"></i> My page
            <% end %>
          </li>
          <li>
            <%= link_to posts_path, class:"nav-link text-light" do %>
              <i class="fa-solid fa-paste"></i> Post一覧
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class:"nav-link text-light" do %>
              <i class="fa-solid fa-right-from-bracket"></i> ログアウト
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to new_user_registration_path, class:"nav-link text-light" do %>
              <i class="fa-solid fa-user-plus"></i> 新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path, class:"nav-link text-light" do %>
              <i class="fa-solid fa-right-to-bracket"></i> ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
