<div class="container mt-5">
  <h3 class="text-center">ユーザー一覧</h3>
    <div class="row">
      <div class="col-md-12">
        <table class="table mt-3">
          <thead>
            <tr bgcolor="#DDDDDD">
              <th>ユーザーID</th>
              <th class="col-md-3">ユーザー名</th>
              <th class="col-md-4">メールアドレス</th>
              <th>ユーザーステータス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td>
                <%= link_to admin_user_path(user) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td><%= user.email %></td>
              <td><%= user.user_status %></td>
              <!--user_statusはUserモデルに定義してある-->
              <td><%= link_to '変更', edit_admin_user_path(user), class:"btn btn-warning btn-sm" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class="paginate">
          <%= paginate @users %>
        </div>
      </div>
    </div>
</div>