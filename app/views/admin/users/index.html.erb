<div class="container mt-5">
  <h3 class="text-center">ユーザー一覧</h3>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <table class="table mt-3">
          <thead>
            <tr bgcolor="#DDDDDD">
              <th>ユーザーID</th>
              <th>ユーザー名</th>
              <th>メールアドレス</th>
              <th>会員ステータス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td>
                <%= link_to admin_user_path(user) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td><%= user.email %></td>
              <td><%= user.user_status %></td>
              <!--user_statusはUserモデルに定義してある-->
              <td><%= link_to '変更', edit_admin_user_path(user), class:"btn btn-warning btn-sm" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>


