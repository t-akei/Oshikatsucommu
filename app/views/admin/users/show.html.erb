<!--このページでステータス変更する-->
<div class="container mt-5">
  <h4 class="text-center"><%= @user.name %> さんの詳細</h4>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <table class="table mt-3" rules="rows">
          <tbody>
            <tr>
              <th class="col-md-3" bgcolor="#DDDDDD">ユーザーID</th>
              <td class="col-md-3"></td>
              <td><%= @user.id %></td>
            </tr>
            <tr>
              <th class="col-md-3" bgcolor="#DDDDDD">ユーザー名</th>
              <td class="col-md-3"></td>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th class="col-md-3" bgcolor="#DDDDDD">メールアドレス</th>
              <td class="col-md-3"></td>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <th class="col-md-3" bgcolor="#DDDDDD">ユーザーステータス</th>
              <td class="col-md-3"></td>
              <td><%= @user.user_status %></td>
            </tr>
            <tr>
              <th class="col-md-3" bgcolor="#DDDDDD">ステータス変更</th>
              <td class="col-md-3"></td>
              <td><%= link_to '変更する', edit_admin_user_path(@user), class:"btn btn-warning btn-sm" %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col-md-8">
        <table class="table mt-5">
          <thead>
            <tr bgcolor="#DDDDDD">
              <th>タイトル</th>
              <th>タグ</th>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to post_path(post) do %>
                  <%= post.title %>
                <% end %>
              </td>
              <td><%= post.category %></td>
              <td><%= post.genre.name %></td>
              <td><%= link_to 'Show', admin_post_path(post) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>


