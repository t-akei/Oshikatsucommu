<h4><%= @user.name %> さんの変更</h4>

<%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
<table>
  <tbody>
    <tr>
      <th>ユーザーID</th>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <th>ユーザー名</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "有効" %>
      </td>
      <td>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "無効" %>
      </td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit "変更する" %></td>
    </tr>
  </tbody>
</table>
<% end %>