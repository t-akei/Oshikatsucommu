<div class="container mt-5">
  <h3 class="text-center mt-4">ジャンル一覧・追加</h3>
    <div class="row justify-content-center mt-4">
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit "ジャンル追加" %>
      <% end %>
    </div>

    <div class="row justify-content-center mt-4">
      <div class="col-md-4">
        <table class="table" rules="rows" border="3">
          <thead bgcolor="#DDDDDD">
            <tr>
              <th class="text-center" colspan="2">ジャンル</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td class="col-md-4 text-md-right"><%= genre.name %></td>
              <td class="col-md-8">
                <div class="d-flex justify-content-center">
                  <%= link_to '編集', edit_admin_genre_path(genre), class:"btn btn-warning btn-sm" %>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
