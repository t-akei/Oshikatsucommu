<div class="container mt-5">
  <h3 class="text-center">投稿一覧</h3>
    <div class="row">
      <div class="col-md-12">
        <table class="table mt-3">
          <thead>
            <tr bgcolor="#DDDDDD">
              <th>ユーザーID</th>
              <th class="col-md-3">ユーザー名</th>
              <th>投稿タイトル</th>
              <th>記事</th>
              <th></th>
            </tr>
          </thead>
          <% @posts.each do |post| %>
          <tbody>
            <tr>
              <td><%= post.user.id %></td>
              <td><%= post.user.name %></td>
              <td>
                <%= link_to admin_post_path(post) do %>
                  <%= truncate(post.title, length: 10, omision: "...") %>
                <% end %>
              </td>
              <td><%= truncate(post.body, length: 15, omision: "...") %></td>
              <td><%= post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
        <div class="paginate">
          <%= paginate @posts %>
        </div>
      </div>
    </div>
</div>