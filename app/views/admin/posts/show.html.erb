<div class="container mt-5">
  <h4 class="text-center">投稿詳細</h4>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <table class="table mt-3" rules="rows" border="3">
          <tbody>
            <tr>
              <th class="col-md-2" style="background-color: #DDDDDD;">ユーザーID</th>
              <td><%= @post.user.id %></td>
            </tr>
            <tr>
              <th style="background-color: #DDDDDD;">ユーザー名</th>
              <td><%= @post.user.name %></td>
            </tr>
            <tr>
              <th style="background-color: #DDDDDD;">タイトル</th>
              <td><%= simple_format(@post.title) %></td>
            </tr>
            <tr>
              <th style="background-color: #DDDDDD;">タグ</th>
              <td><%= @post.category %></td>
            </tr>
            <tr>
              <th style="background-color: #DDDDDD;">ジャンル</th>
              <td><%= @post.genre.name %></td>
            </tr>
            <% if @post.post_image.attached? %>
            <tr>
              <th style="background-color: #DDDDDD;">画像</th>
              <td><%= image_tag @post.get_post_image %></td>
            </tr>
            <% end %>
            <tr>
              <th style="background-color: #DDDDDD;">本文</th>
              <td><%= simple_format(@post.body) %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-md-3 offset-md-9">
        <%= link_to '削除', admin_post_path(@post), method: :delete, "data-confirm" => "投稿を削除しますか？", class:"btn btn-danger btn-lg" %>
      </div>
    </div>
</div>