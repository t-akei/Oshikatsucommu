<div class="container mt-5">

<h3>投稿コメント一覧</h3>

<table class="table mt-3">
  <thead>
    <tr>
      <th class="col-2">ユーザー名</th>
      <th class="col-8">コメント</th>
      <th class="col-1"></th>
      <th class="col-1"></th>
    </tr>
  </thead>
  <tbody>
    <% @post_comments.each do |comment| %>
    <tr>
      <td class="col-2"><%= comment.user.name %></td>
      <td class="col-8"><%= comment.comment %></td>
      <td class="col-1"> <%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
      <td class="col-1">
        <%= link_to '削除', admin_post_comment_path(comment), method: :delete, "data-confirm" => "コメントを削除しますか？", class:"btn btn-sm btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

</div>