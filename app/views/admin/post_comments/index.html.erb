<h3>投稿コメント一覧</h3>

<table>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>コメント</th>
    </tr>
  </thead>
  <tbody>
    <% @post_comments.each do |comment| %>
    <tr>
      <td><%= comment.user.name %></td>
      <td><%= comment.comment %></td>
      <td><%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
      <td><%= link_to '削除', admin_post_comment_path, method: :delete, "data-confirm" => "コメントを削除しますか？" %></td>
    </tr>
    <% end %>
  </tbody>
</table>