<div class="container mt-5">
  <h3 class="text-center">投稿コメント一覧</h3>
    <div class="row">
      <div class="col-md-12">
        <table class="table mt-3">
          <thead>
            <tr bgcolor="#DDDDDD">
              <th class="col-md-3">ユーザー名</th>
              <th class="col-md-6">コメント</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @post_comments.each do |comment| %>
            <tr>
              <td><%= comment.user.name %></td>
              <td class="comment"><%= simple_format(comment.comment) %></td>
              <td><%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
              <td>
                <%= link_to '削除', admin_post_comment_path(comment), method: :delete, "data-confirm" => "コメントを削除しますか？", class:"btn btn-danger btn-sm" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class="paginate">
          <%= paginate @post_comments %>
        </div>
      </div>
    </div>
</div>